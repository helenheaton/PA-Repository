  # --------------------------------------------------------------------------------------------------
  # Other Costs - Domestic Waste Costs
  # Input of domestic waste and recycling costs per bin per week 
  #
  # Created by Jenny Hassett 
  # --------------------------------------------------------------------------------------------------
  
 # Calculate total annual domestic waste collection charge
  ['Total Commercial Waste Cost']=N:
      ['No. Commercial Bins Emptied']*['No. Commercial Waste Collections per week']*['Cost per Commercial Waste Bin']*52;
      
 # Calculate total annual recycle collection charge
  ['Total Recycling Collection Cost']=N:
    (['No. Recycling Bins Emptied']*['No. Recycling Waste Collections per week']*['Cost per Recycling Bin']*52);
    
 # If VAT is applicable, calculate VAT amount based on 'Total Collection Costs (Net)'
  ['VAT','Current Year']=N:
    
    IF ( db('Other Costs - Domestic Waste Costs', !Version, !Department, !t_Year, 'VAT applicable') @= 'Yes',
       ['Total Collection Costs (Net)']* DB('Admin - Model Parameters', 'Current Year', 'VAT Rate'),
       Continue);
       
   ['VAT','Year+1']=N:
    
    IF ( db('Other Costs - Domestic Waste Costs', !Version, !Department, !t_Year, 'VAT applicable') @= 'Yes',
       ['Total Collection Costs (Net)']* DB('Admin - Model Parameters', 'Budget Year', 'VAT Rate'),
       Continue);
 
FEEDERS;
#Internal Feeders
['No. Commercial Bins Emptied']=>['Total Commercial Waste Cost'];
['No. Recycling Bins Emptied']=>['Total Recycling Collection Cost'];



#External Feeders
['Total Collection Costs (Gross)']=>DB('Other Costs - Annual Cost Assumptions', !Version, !t_Year, !Department, 'Domestic Waste','Fixed Amount');
